<% @order_items.each do |item| %>
<h3><%= item.food_item.title%></h3>
<h3><%= item.food_item.price %></h3>
<%= form_with model: item do |f|%>
<%= f.hidden_field :food_item_id, value: item.food_item.id %>
<%= f.number_field :quantity, value: item.quantity.to_i%>
<%= f.submit "Update Cart" %>
<%= link_to "Remove Items", item, method: :delete, remote: true %>
<% end%>
<h2>Subtotal: <%= item.total %></h2>


<h3>Your current order has a total of: <%= item.total %></h3>
<% end %>
